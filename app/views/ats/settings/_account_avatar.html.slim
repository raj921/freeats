/# locals: (account:)

#account_avatar.hstack.gap-2
  .profile-avatar.img-thumbnail.profile-avatar-edit
    - if account.avatar.attached?
      = image_tag account.avatar.variant(:medium)
    - else
      = render IconComponent.new(:user, class: "empty-avatar-icon")

  = form_with model: account,
              url: update_avatar_ats_settings_path,
              method: :patch, class: "hstack gap-2 turbo-instant-submit" do |form|
    = render "shared/profile/image_upload_button", file_field: :avatar, form:

  - if account.avatar.present?
    = render "shared/profile/image_delete_button", url: remove_avatar_ats_settings_path
